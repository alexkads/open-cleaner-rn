{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clean RN Dev",
  "version": "0.1.0",
  "identifier": "com.clean-rn-dev.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Clean RN Dev",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:clean_rn_dev.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2024 Clean RN Dev. All rights reserved.",
    "shortDescription": "Development environment cleaner for React Native projects",
    "longDescription": "Clean RN Dev is a powerful tool to clean up development environments, remove cache files, and free up disk space for React Native and other development projects.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "license": "../LICENSE"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": false,
      "wix": {
        "language": ["en-US"],
        "template": "main.wxs"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English"],
        "template": "main.nsi"
      }
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.0-37", "libssl3"],
        "priority": "optional",
        "section": "devel",
        "maintainer": "Clean RN Dev Team <support@clean-rn-dev.com>",
        "homepage": "https://github.com/clean-rn-dev/clean-rn-dev"
      },
      "appimage": {
        "bundleMediaFramework": false,
        "libs": ["libwebkit2gtk-4.0-37", "libssl3"]
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    }
  }
}