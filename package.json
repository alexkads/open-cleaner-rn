{
  "name": "clean-rn-dev",
  "private": true,
  "version": "0.1.0",
  "type": "module",

  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run test:once && tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri dev",
    "test": "vitest",
    "test:once": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "version:update": "node scripts/update-version.cjs",
    "build:all": "npm run version:update && npm run build && tauri build",
    "build:mac": "npm run version:update && npm run build && tauri build --target aarch64-apple-darwin",
    "build:windows": "npm run version:update && npm run build && tauri build --target x86_64-pc-windows-msvc",
    "build:linux": "npm run version:update && npm run build && tauri build --target x86_64-unknown-linux-gnu",
    "build:linux-arm": "npm run version:update && npm run build && tauri build --target aarch64-unknown-linux-gnu",
    "release": "npm run version:update && npm run build && tauri build --config src-tauri/tauri.release.conf.json",
    "version:bump": "node scripts/update-version.cjs",
    "docs:dev": "cd docs-astro && npm run dev",
    "docs:build": "cd docs-astro && npm ci && npm run build",
    "docs:preview": "cd docs-astro && npm run preview",
    "docs:install": "cd docs-astro && npm install",
    "pr:validate": "./scripts/validate-pr.sh",
    "pr:setup": "./scripts/setup-branch-protection.sh"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "^2.3.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.19.2",
    "lucide-react": "^0.525.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.3",
    "recharts": "^3.0.2",
    "sonner": "^2.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.2.5",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
