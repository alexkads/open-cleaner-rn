---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Open Cleaner RN"
  description="Professional development environment cleaner for React Native and cross-platform projects. Free up disk space, clean cache files, and optimize your development workflow with our powerful desktop application."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-background">
        <div class="hero-particles"></div>
        <div class="hero-gradient"></div>
      </div>
      
      <div class="container">
