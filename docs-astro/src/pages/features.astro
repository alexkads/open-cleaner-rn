---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Features"
  description="Discover all the powerful features of Open Cleaner RN - from smart detection to detailed analytics and cross-platform compatibility."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <div class="hero-content">
          <h1>Powerful Features for Developers</h1>
          <p class="hero-description">
            Open Cleaner RN is packed with intelligent features designed to keep your 
            development environment clean, fast, and organized.
          </p>
        </div>
      </div>
    </section>

    <!-- Core Features -->
    <section class="core-features">
      <div class="container">
        <div class="section-header">
          <h2>Core Features</h2>
          <p>Everything you need for effective development environment management</p>
        </div>
        
        <div class="features-showcase">
