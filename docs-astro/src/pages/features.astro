<style>
  /* Page Hero */
  .page-hero {
    padding: 3rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-bottom: 1px solid var(--color-border-light);
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .page-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Core Features */
  .core-features {
    padding: 4rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .section-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .features-showcase {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .feature-highlight {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .feature-highlight.reverse {
    direction: rtl;
  }

  .feature-highlight.reverse > * {
    direction: ltr;
  }

  .feature-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 200px;
  }

  /* Animations */
  .scan-animation {
    position: relative;
    width: 150px;
    height: 150px;
  }

  .scan-circle {
    width: 100%;
    height: 100%;
    border: 3px solid var(--color-border);
    border-radius: 50%;
    border-top-color: var(--color-primary);
    animation: spin 2s linear infinite;
  }

  .scan-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    background: var(--color-primary);
    border-radius: 50%;
    animation: pulse 1.5s ease-in-out infinite;
  }

  .scan-progress {
    position: absolute;
    bottom: -30px;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
  }

  .progress-bar {
    height: 100%;
    background: var(--color-primary);
    border-radius: 2px;
    animation: progress 3s ease-in-out infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @keyframes pulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
    50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.7; }
  }

  @keyframes progress {
    0% { width: 0%; }
    50% { width: 75%; }
    100% { width: 100%; }
  }

  .analytics-chart {
    text-align: center;
  }

  .chart-bars {
    display: flex;
    align-items: end;
    gap: 0.5rem;
    height: 120px;
    margin-bottom: 1rem;
  }

  .bar {
    width: 20px;
    background: linear-gradient(to top, var(--color-primary), var(--color-secondary));
    border-radius: 2px 2px 0 0;
    animation: grow 2s ease-out infinite;
  }

  .bar:nth-child(2) { animation-delay: 0.2s; }
  .bar:nth-child(3) { animation-delay: 0.4s; }
  .bar:nth-child(4) { animation-delay: 0.6s; }
  .bar:nth-child(5) { animation-delay: 0.8s; }

  @keyframes grow {
    0% { height: 0; }
    100% { height: var(--height, 50%); }
  }

  .chart-legend {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .safety-shield {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .shield-icon {
    font-size: 4rem;
    color: var(--color-success);
  }

  .shield-checkmarks {
    display: flex;
    gap: 0.5rem;
  }

  .checkmark {
    width: 24px;
    height: 24px;
    background: var(--color-success);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.75rem;
    font-weight: bold;
    animation: checkAppear 0.5s ease-out forwards;
    opacity: 0;
  }

  .checkmark:nth-child(1) { animation-delay: 0.2s; }
  .checkmark:nth-child(2) { animation-delay: 0.4s; }
  .checkmark:nth-child(3) { animation-delay: 0.6s; }

  @keyframes checkAppear {
    to { opacity: 1; transform: scale(1.1) scale(1); }
  }

  .feature-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .feature-content p {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .feature-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-benefits li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    color: var(--color-text-muted);
  }

  .feature-benefits li::before {
    content: '‚úì';
    color: var(--color-success);
    font-weight: bold;
  }

  /* Tool Support */
  .tool-support {
    padding: 4rem 0;
    background: var(--color-bg-alt);
  }

  .tools-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: white;
    border-radius: 1rem;
    border: 1px solid var(--color-border-light);
    overflow: hidden;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem;
    background: rgba(14, 165, 233, 0.05);
    border-bottom: 1px solid var(--color-border-light);
  }

  .category-icon {
    font-size: 1.5rem;
  }

  .category-header h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .tools-list {
    padding: 1.5rem;
  }

  .tool-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border-light);
  }

  .tool-item:last-child {
    border-bottom: none;
  }

  .tool-info strong {
    display: block;
    font-weight: 600;
    color: var(--color-text);
  }

  .tool-info span {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .tool-savings {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 0.875rem;
  }

  /* Advanced Features */
  .advanced-features {
    padding: 4rem 0;
  }

  .advanced-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .advanced-card {
    padding: 2rem;
    background: white;
    border-radius: 1rem;
    border: 1px solid var(--color-border-light);
    text-align: center;
    transition: all 0.3s ease;
  }

  .advanced-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .advanced-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .advanced-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .advanced-card p {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .performance-stats {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-weight: 700;
    color: var(--color-primary);
    font-size: 1.125rem;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .schedule-options {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .schedule-tag {
    padding: 0.25rem 0.75rem;
    background: rgba(14, 165, 233, 0.1);
    color: var(--color-primary);
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .monitor-metrics, .rule-examples, .report-types {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
