---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { label: 'Features', href: '/features' },
    { label: 'Installation', href: '/installation' },
    { label: 'API Reference', href: '/api' },
    { label: 'Changelog', href: 'https://github.com/alexkads/open-cleaner-rn/releases' }
  ],
  community: [
    { label: 'GitHub', href: 'https://github.com/alexkads/open-cleaner-rn' },
    { label: 'Issues', href: 'https://github.com/alexkads/open-cleaner-rn/issues' },
    { label: 'Discussions', href: 'https://github.com/alexkads/open-cleaner-rn/discussions' },
    { label: 'Contributing', href: '/contributing' }
  ],
  resources: [
    { label: 'Getting Started', href: '/getting-started' },
    { label: 'Documentation', href: '/' },
    { label: 'Examples', href: '/examples' },
    { label: 'FAQ', href: '/faq' }
  ]
};

const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/alexkads/open-cleaner-rn',
    icon: 'github'
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/alexkads',
    icon: 'twitter'
  }
];
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <!-- Main Footer Content -->
      <div class="footer-main">
        <div class="footer-brand">
          <div class="footer-logo">
            <svg width="40" height="40" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="32" height="32" rx="8" fill="url(#footerGradient)" />
              <path d="M8 12h16M8 16h16M8 20h12" stroke="white" stroke-width="2" stroke-linecap="round" />
              <defs>
                <linearGradient id="footerGradient" x1="0" y1="0" x2="32" y2="32" gradientUnits="userSpaceOnUse">
                  <stop stop-color="#0ea5e9" />
                  <stop offset="1" stop-color="#8b5cf6" />
                </linearGradient>
              </defs>
            </svg>
            <span class="footer-title">Open Cleaner RN</span>
          </div>
          <p class="footer-description">
            Professional development environment cleaner for React Native and cross-platform projects. 
            Free up disk space and optimize your development workflow.
          </p>
          <div class="social-links">
            {socialLinks.map(({ name, href, icon }) => (
              <a 
                href={href} 
                class="social-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Follow us on ${name}`}
              >
                {icon === 'github' && (
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                  </svg>
                )}
                {icon === 'twitter' && (
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>

        <div class="footer-links">
          <div class="footer-section">
            <h3>Product</h3>
            <ul>
              {footerLinks.product.map(({ label, href }) => (
                <li>
                  <a href={href} target={href.startsWith('http') ? '_blank' : undefined} rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}>
                    {label}
                    {href.startsWith('http') && <span class="sr-only"> (opens in new tab)</span>}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div class="footer-section">
            <h3>Community</h3>
            <ul>
              {footerLinks.community.map(({ label, href }) => (
                <li>
                  <a href={href} target={href.startsWith('http') ? '_blank' : undefined} rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}>
                    {label}
                    {href.startsWith('http') && <span class="sr-only"> (opens in new tab)</span>}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div class="footer-section">
            <h3>Resources</h3>
            <ul>
              {footerLinks.resources.map(({ label, href }) => (
                <li>
                  <a href={href} target={href.startsWith('http') ? '_blank' : undefined} rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}>
                    {label}
                    {href.startsWith('http') && <span class="sr-only"> (opens in new tab)</span>}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <!-- Footer Bottom -->
      <div class="footer-bottom">
        <div class="footer-bottom-content">
          <p class="copyright">
            © {currentYear} Open Cleaner RN. Made with ❤️ by 
            <a href="https://github.com/alexkads" target="_blank" rel="noopener noreferrer">alexkads</a>
          </p>
          <div class="footer-meta">
            <span class="badge">
              <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
              </svg>
              Open Source
            </span>
            <span class="badge">
              <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.287 5.906c-.778.324-2.334.994-4.666 2.01-.378.15-.577.298-.595.442-.03.243.275.339.69.47l.175.055c.408.133.958.288 1.243.294.26.006.549-.1.868-.32 2.179-1.471 3.304-2.214 3.374-2.23.05-.012.12-.026.166.016.047.041.042.12.037.141-.03.129-1.227 1.241-1.846 1.817-.193.18-.33.307-.358.336a8.154 8.154 0 0 1-.188.186c-.38.366-.664.64.015 1.088.327.216.589.393.85.571.284.194.568.387.936.629.093.06.183.125.27.187.331.236.63.448.997.414.214-.02.435-.22.547-.82.265-1.417.786-4.486.906-5.751a1.426 1.426 0 0 0-.013-.315.337.337 0 0 0-.114-.217.526.526 0 0 0-.31-.093c-.3.005-.763.166-2.984 1.09z"/>
              </svg>
              Free
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-top: 1px solid var(--color-border-light);
    margin-top: auto;
  }

  .footer-content {
    padding: 3rem 0 1.5rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .footer-title {
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: var(--color-text-muted);
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid var(--color-border-light);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    color: var(--color-primary);
    background: white;
    border-color: var(--color-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-section h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-section a:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    border-top: 1px solid var(--color-border-light);
    padding-top: 1.5rem;
  }

  .footer-bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .copyright a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .copyright a:hover {
    text-decoration: underline;
  }

  .footer-meta {
    display: flex;
    gap: 0.75rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    background: rgba(14, 165, 233, 0.1);
    border: 1px solid rgba(14, 165, 233, 0.2);
    border-radius: 1rem;
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .footer-content {
      padding: 2rem 0 1rem;
    }
  }
</style>